<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvWeAreBabymetal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Are BABYMETAL!!"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaceLaunchImage" />

    <ImageView
        android:id="@+id/ivBabymetalLogo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="Image by Hiru Kazu"
        android:scaleType="fitStart"
        android:src="@drawable/babymetal_hirukazu"
        app:layout_constraintBottom_toTopOf="@+id/spaceLaunchImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spaceLaunchImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ivBabymetalLogo"
        tools:layout_editor_absoluteX="-81dp" />

    <Button
        android:id="@+id/btnEnterBabymetal"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="Tap to Enter Babymetal "
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWeAreBabymetal" />

</androidx.constraintlayout.widget.ConstraintLayout>