<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/teviAlbumTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/babymetal_first_album"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/teviAlbumYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teviAlbumYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/teviAlbumTitle" />

    <ImageView
        android:id="@+id/imviCoverAlbum"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/album_babymetal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teviAlbumTitle" />

    <TextView
        android:id="@+id/teviAlbumSongs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="end"
        android:text="@string/songs_babymetal_album"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imviCoverAlbum"
        app:layout_constraintTop_toBottomOf="@+id/teviAlbumTitle" />


</androidx.constraintlayout.widget.ConstraintLayout>