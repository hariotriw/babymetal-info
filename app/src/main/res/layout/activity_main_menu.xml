<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <ImageView
        android:id="@+id/ivBabymetal"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="centerCrop"
        android:src="@drawable/babymetalize_hirukazu"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMenuProfile"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#808080"
        android:text="Profile"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuMember"
        app:layout_constraintTop_toBottomOf="@+id/ivBabymetal"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/btnMenuMember"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#808080"
        android:text="Member"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuSongs"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuProfile"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/btnMenuSongs"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#808080"
        android:text="Songs"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuTour"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuMember"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/btnMenuTour"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#808080"
        android:text="Tours"
        app:layout_constraintBottom_toTopOf="@+id/btnMenuExit"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuSongs"
        tools:layout_editor_absoluteX="143dp" />

    <Button
        android:id="@+id/btnMenuExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#606060"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenuTour" />


</androidx.constraintlayout.widget.ConstraintLayout>